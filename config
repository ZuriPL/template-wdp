# General
export COMPILER='gcc'

# Paths
export PATH_ROOT=$(pwd)
export PATH_TESTS=$PATH_ROOT/tests
export PATH_SCRIPTS=$PATH_ROOT/scripts
export PATH_SOURCE=$PATH_ROOT/src

# Files
export SOURCE_CODE=$PATH_SOURCE/calc.c
export EXE=$PATH_ROOT/a.out
export TESTER="bash $PATH_SCRIPTS/tester.sh"

# Tester confgiuration
export TESTS_LIST=$(ls -1 -r $PATH_TESTS | tr '\n' ' ')
export TESTS_MAX=500
export TESTS_MAX_VALGRIND=5

# Aliases
alias test="bash $PATH_SCRIPTS/tester.sh"
#alias a="bash $PATH_SCRIPTS/a.sh"

